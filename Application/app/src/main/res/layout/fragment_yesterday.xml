<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.YesterdayFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/previous_day"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Previous Day"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/purple_200"/>

        <Button
            android:id="@+id/done"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:text="Done:  2/3"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/teal_700"
            app:layout_constraintBottom_toTopOf="@+id/item1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/previous_day"
            android:drawableRight="@drawable/baseline_star_24"/>

       <RelativeLayout
           android:id="@+id/item1"
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:layout_marginTop="30dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.5"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/done"
           android:background="@drawable/border">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_check_24"/>
           <ImageView
               android:id="@+id/image2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_margin="10dp"
               android:layout_alignParentLeft="true"
               android:src="@drawable/baseline_school_24"/>
           <TextView
               android:id="@+id/title1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:text="Study"
               android:layout_toRightOf="@+id/image2"
               android:textColor="@android:color/black"
               android:layout_centerVertical="true"
               android:textSize="20sp"/>

       </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item1"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_cancel_24"/>
            <ImageView
                android:id="@+id/image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/baseline_house_24"/>
            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Chores"
                android:layout_toRightOf="@+id/image4"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textSize="20sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item2"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_check_24"/>
            <ImageView
                android:id="@+id/image6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/baseline_directions_bike_24"/>
            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Workout"
                android:layout_toRightOf="@+id/image6"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:textSize="20sp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/share_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="Share stars"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item3"
            android:backgroundTint="@color/purple_200"
            android:drawableLeft="@drawable/baseline_share_24"/>

    </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>